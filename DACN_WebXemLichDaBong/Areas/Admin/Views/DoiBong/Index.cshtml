@using DACN_WebXemLichDaBong.Areas.Admin.Models;
@model IList<DoiBongViewModel>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.26.0/moment.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<style>
    .container {
        width: 117%;
        max-width: 117%;
    }
</style>
<div class="container mt-5">
    <input type="button" onclick="location.href='/Admin/DoiBong/Create/@Model.Select(m => m.GiaiDauId).FirstOrDefault()';" value="Thêm Đội Bóng" />
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">Tên Đội Bóng</th>
                                <th scope="col">Ảnh Đội Bóng</th>
                                <th scope="col">Huấn Luyện Viên</th>
                                <th scope="col">Quốc Gia</th>
                                <th scope="col">Thông Tin Thêm</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var md in Model)
                            {
                                <tr>
                                    <td>@md.TenDoiBong</td>
                                    <td><img style="width: 60px; height: 70px;" src="~/img/DoiBong/@md.AnhDoiBong" /></td>
                                    <td>@md.TenHuanLuyenVien</td>
                                    <td>@md.TenQuocGia</td>
                                    <td>@md.ThongTinThem</td>
                                    <td>
                                        <a href="/Admin/DoiBong/Edit/@md.DoiBongId" class="tm-product-delete-link">
                                            <i class="bi bi-pencil-square tm-product-edit-icon"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Delete", "DoiBong", new {area = "Admin", Id = md.DoiBongId})" class="tm-product-delete-link">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
