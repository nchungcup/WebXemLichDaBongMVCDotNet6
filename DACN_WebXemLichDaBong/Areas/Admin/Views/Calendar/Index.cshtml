@using DACN_WebXemLichDaBong.Areas.Admin.Models;
@model IList<LichThiDauViewModel>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.26.0/moment.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

<style>
    .container {
        width: 117%;
        max-width: 117%;
    }
</style>
<div class="container mt-5">
    <input type="button" onclick="location.href='/Admin/Calendar/Create';" value="Tạo Lịch" />
    <input type="button" onclick="location.href='/Admin/Calendar/ExcelCreate';" value="Tải Lên Lịch Từ Excel" />
    <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-products">
                <div class="tm-product-table-container">
                    <table class="table table-hover tm-table-small tm-product-table">
                        <thead>
                            <tr>
                                <th scope="col">Đội Bên Trái</th>
                                <th scope="col">Tỷ Số</th>
                                <th scope="col">Đội Bên Phải</th>
                                <td scope ="col">Thời Gian Thi Đấu</td>
                                <th scope="col">Giải Đấu</th>
                                <th scope="col">Hình Thức Thi Đấu</th>
                                <th scope="col">Sân Thi Đấu</th>
                                <th scope="col">Kết thúc?</th>
                                <th scope="col">Edit</th>
                                <th scope="col">Xóa</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ltd in Model)
                            {
                                <tr>
                                    <td>@ltd.DoiBenTrai</td>
                                    <td>@ltd.TySo</td>
                                    <td>@ltd.DoiBenPhai</td>
                                    <td>@ltd.ThoiGianThiDau</td>
                                    <td>@ltd.GiaiDau</td>
                                    <td>@ltd.HinhThucThiDau</td>
                                    <td>@ltd.SanThiDau</td>
                                    <td>@ltd.IsKetThucText</td>
                                    <td>
                                        <a href="/Admin/Calendar/Edit/@ltd.LichId" class="tm-product-delete-link">
                                            <i class="bi bi-pencil-square tm-product-edit-icon"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/Admin/Calendar/Delete/@ltd.LichId" class="tm-product-delete-link">
                                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
