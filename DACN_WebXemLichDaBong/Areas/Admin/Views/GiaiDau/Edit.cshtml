@using DACN_WebXemLichDaBong.Models;
@model GiaiDauModel;
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.26.0/moment.min.js"></script>
<link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" rel="stylesheet" />
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link href='https://fonts.googleapis.com/css?family=Open+Sans:400,300,400italic,700' rel='stylesheet' type='text/css'>

<div class="container tm-mt-big tm-mb-big">
    <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <div class="row">
                    <a style=" margin-left: 400px;" href="/Admin/GiaiDau/Index">Hủy</a>
                    <div class="col-12">
                        <h2 class="tm-block-title d-inline-block">Sửa Giải Đấu</h2>
                    </div>
                </div>
                <div class="row tm-edit-product-row">
                    <div class="col-xl-6 col-lg-6 col-md-12">
                        <form method="post" asp-controller="GiaiDau" asp-action="Edit" class="tm-edit-product-form">
                            <input value="@Model.GiaiDauId" name="GiaiDauId" hidden>
                            <div class="form-group mb-3">
                                <b>Tên Giải Đấu</b><input value="@Model.TenGiaiDau" name="TenGiaiDau" type="text" autocomplete="off" required>
                            </div>
                            <div class="form-group mb-3">
                                <b>Link Ảnh Giải Đấu</b><input value="@Model.AnhGiaiDau" name="AnhGiaiDau" type="text" autocomplete="off">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary btn-block text-uppercase">Sửa Giải Đấu</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
